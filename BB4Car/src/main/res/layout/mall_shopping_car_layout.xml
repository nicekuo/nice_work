<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">

    <com.core.widget.listview.NoScrollListView
        android:id="@+id/id_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="5dip">

    </com.core.widget.listview.NoScrollListView>

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="还没有商品哦,快去加车吧"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_button_height"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/allSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dipX15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dipX15"
            android:text="合计:"
            android:textColor="@color/text_666666" />

        <TextView
            android:id="@+id/id_pay_total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dipX15"
            android:text="¥0"
            android:textColor="@color/red" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dipX15"
            android:text="(不含运费)"
            android:textColor="@color/text_666666" />

        <TextView
            android:id="@+id/id_tv_account"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:gravity="center"
            android:text="确认订单"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_item_middle" />

    </LinearLayout>


</FrameLayout>
