<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dipX10"
    android:padding="@dimen/dipX10">

    <TextView
        android:id="@+id/id_tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dipX15"
        android:textSize="@dimen/txt_size_item_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.core.widget.image.SFImageView
            android:id="@+id/id_img_product"
            android:layout_width="@dimen/item_img_size"
            android:layout_height="@dimen/item_img_size"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dipX15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dipX5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_tv_per_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/common_red"
                    android:textSize="@dimen/txt_size_item_middle" />

                <TextView
                    android:id="@+id/id_tv_good_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dipX5"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dipX10"
                    android:textColor="@color/common_red"
                    android:textSize="@dimen/txt_size_item_middle" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dip">

                    <ImageView
                        android:id="@+id/id_img_add"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dip"
                        android:background="@color/transparent"
                        android:src="@drawable/icon_add" />

                    <TextView
                        android:id="@+id/select_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dip"
                        android:layout_toLeftOf="@id/id_img_add"
                        android:textSize="@dimen/txt_size_item_middle" />

                    <ImageView
                        android:id="@+id/id_img_decrease"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/select_count"
                        android:background="@color/transparent"
                        android:src="@drawable/icon_decrease" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@color/blue"
                    android:paddingBottom="@dimen/dipX3"
                    android:paddingLeft="@dimen/dipX15"
                    android:paddingRight="@dimen/dipX15"
                    android:paddingTop="@dimen/dipX3"
                    android:text="删除"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_size_item_content" />

                <TextView
                    android:id="@+id/exchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:paddingBottom="@dimen/dipX3"
                    android:paddingLeft="@dimen/dipX15"
                    android:paddingRight="@dimen/dipX15"
                    android:paddingTop="@dimen/dipX3"
                    android:text="更换"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_size_item_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>