<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dipX10"
    android:background="@color/app_bg_color">
    <com.core.widget.image.SFImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/id_tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京纳能旗舰店"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dipX10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺地址："/>
        <TextView
            android:id="@+id/id_tv_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dipX5"
            />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dipX10"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务热线："/>
            <TextView
                android:id="@+id/id_tv_shop_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dipX5"
                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dipX10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营业时间："/>
        <TextView
            android:id="@+id/id_tv_shop_open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dipX5"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dipX10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺评论（"/>
        <TextView
            android:id="@+id/id_tv_shop_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dipX5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")条"/>
        <RatingBar
            android:id="@+id/id_shop_detail_rt"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:numStars="5"
            style="@style/style_roomRatingBar"
            android:layout_marginLeft="@dimen/dipX10"
            android:max="5"
            android:progress="1"
            android:isIndicator="true"
            android:stepSize="0.1"
            android:layout_height="@dimen/rating_bar_size" />
    </LinearLayout>
</LinearLayout>