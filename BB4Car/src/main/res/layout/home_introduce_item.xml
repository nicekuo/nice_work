<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_service_item_height"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dipX20">

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:background="@color/line_color"-->
        <!--android:layout_alignParentTop="true"-->
        <!--/>-->


    <com.core.widget.image.SFImageView
        android:id="@+id/id_pic"
        android:layout_width="@dimen/home_service_item_image_height"
        android:layout_height="@dimen/home_service_item_image_height"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/id_pic"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/dipX5">

        <TextView
            android:id="@+id/id_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_template_data"
            android:textSize="@dimen/txt_size_item_title" />

        <TextView
            android:id="@+id/id_tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dipX3"
            android:text="@string/common_template_data"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/txt_size_item_middle" />
    </LinearLayout>


</RelativeLayout>