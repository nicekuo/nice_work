<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dipX3">

    <ImageView
        android:id="@+id/id_img_icon"
        android:layout_width="@dimen/item_img_size"
        android:layout_height="@dimen/item_img_size" />

    <ImageView
        android:id="@+id/id_icon_right"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_errow_right"/>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_img_icon"
        android:layout_toLeftOf="@id/id_icon_right"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/id_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dipX30"
            android:padding="@dimen/dipX3"

            android:textSize="@dimen/txt_size_item_title"
            android:text="@string/common_template_data"/>
        <TextView
            android:id="@+id/id_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dipX30"
            android:padding="@dimen/dipX3"
            android:textSize="@dimen/txt_size_item_content"
            android:textColor="@color/text_666666"
            android:layout_alignParentRight="true"
            android:text="@string/common_template_data"/>
        <TextView
            android:id="@+id/id_tv_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dipX30"
            android:padding="@dimen/dipX3"
            android:textSize="@dimen/txt_size_item_title"
            android:textColor="@color/text_666666"
            android:maxLines="1"
            android:layout_below="@id/id_tv_title"
            android:text="@string/common_template_data"/>
    </RelativeLayout>
</RelativeLayout>