<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dipX10">

    <CheckBox
        android:id="@+id/id_chb_goods"
        android:layout_width="30dp"
        android:layout_height="15dip"
        android:background="@color/transparent"
        android:checked="false"
        android:gravity="center_vertical" />

    <com.core.widget.image.SFImageView
        android:id="@+id/id_img_product"
        android:layout_width="@dimen/item_img_size"
        android:layout_height="@dimen/item_img_size"
        android:layout_marginLeft="@dimen/dipX10" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dipX10"
        android:orientation="vertical"
        android:paddingRight="@dimen/dipX15"
        android:paddingTop="@dimen/dipX10">

        <TextView
            android:id="@+id/id_tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_order_good_name"
            android:textSize="@dimen/txt_size_item_title" />

        <TextView
            android:id="@+id/id_tv_per_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingLeft="@dimen/dipX5"
            android:text="ï¿¥88"
            android:textColor="@color/red"
            android:textSize="@dimen/txt_size_title_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_img_add"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_add" />

            <TextView
                android:id="@+id/select_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:text="10"
                android:textSize="@dimen/txt_size_title_content" />

            <ImageView
                android:id="@+id/id_img_decrease"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="20dip"
                android:background="@color/transparent"
                android:src="@drawable/icon_delete" />


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/id_btn_do_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:gravity="center"
                android:paddingBottom="@dimen/dipX5"
                android:paddingLeft="@dimen/dipX15"
                android:paddingRight="@dimen/dipX15"
                android:paddingTop="@dimen/dipX5"
                android:text="@string/hint_delete"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_item_content" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>