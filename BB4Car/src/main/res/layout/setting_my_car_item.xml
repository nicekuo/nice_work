<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_img_size"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dipX3">

    <com.core.widget.image.SFImageView
        android:id="@+id/id_img_item"
        android:layout_width="@dimen/item_img_size"
        android:layout_height="@dimen/item_img_size" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dipX5"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/dipX3">

        <TextView
            android:id="@+id/id_tv_car_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is the title"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/txt_size_item_content" />

        <LinearLayout
            android:id="@+id/twoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dipX5"
            android:background="@color/white">

            <TextView
                android:id="@+id/onBoardTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/txt_size_item_content" />

            <TextView
                android:id="@+id/kilometers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dipX15"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/txt_size_item_content" />

        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:id="@+id/icon_check"
        android:layout_width="@dimen/dipX25"
        android:layout_height="@dimen/dipX25"
        android:layout_marginRight="@dimen/dipX10"
        android:checked="false"
        android:clickable="false"
        android:focusable="false" />

</LinearLayout>


