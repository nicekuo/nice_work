<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="@dimen/dipX10"
    android:orientation="vertical">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <com.core.widget.image.SFImageView
                android:id="@+id/image"
                android:layout_width="@dimen/home_goods_item_image_height"
                android:layout_height="@dimen/home_goods_item_image_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dipX10"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_gray"
                android:layout_marginBottom="@dimen/dipX10"
                />
        </LinearLayout>

        <com.core.widget.image.SFImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/home_goods_item_icon_height"
            android:layout_height="@dimen/home_goods_item_icon_height"
            android:layout_gravity="bottom|right"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/goodName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dipX40"
        android:textSize="@dimen/txt_size_item_middle"
        android:textColor="@color/text_666666"
        android:singleLine="false"
        android:maxLines="2"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/goodVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/text_666666"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/red_clolor"
            android:textSize="@dimen/txt_size_item_middle"
            />

        <TextView
            android:id="@+id/buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_item_middle"
            android:background="@color/red_clolor"
            android:paddingLeft="@dimen/dipX10"
            android:paddingRight="@dimen/dipX10"
            android:text="购买"
            />

    </LinearLayout>



</LinearLayout>