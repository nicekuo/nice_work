<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dipX60">

            <com.core.nice_view.ViewBannerAutoScroll
                android:id="@+id/headerProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_button_height"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dipX15"
                android:background="@android:color/white"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/txt_size_item_title" />


            <LinearLayout
                android:id="@+id/attributes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/dipX15"
                android:orientation="vertical"
                android:paddingTop="15dp">


            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_button_height"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="@dimen/dipX15"
                >

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/red"
                    android:textSize="@dimen/txt_size_item_title"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/sale_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_333333"
                    android:textSize="@dimen/txt_size_item_middle"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_button_height"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingLeft="@dimen/dipX15"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全正品"
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/txt_size_item_content"
                    android:drawableLeft="@drawable/icon_yellow_ok"
                    android:drawablePadding="@dimen/dipX5"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格低"
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/txt_size_item_content"
                    android:drawableLeft="@drawable/icon_yellow_ok"
                    android:drawablePadding="@dimen/dipX5"
                    android:layout_marginLeft="@dimen/dipX10"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="放心购"
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/txt_size_item_content"
                    android:drawableLeft="@drawable/icon_yellow_ok"
                    android:drawablePadding="@dimen/dipX5"
                    android:layout_marginLeft="@dimen/dipX10"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快速达"
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/txt_size_item_content"
                    android:drawableLeft="@drawable/icon_yellow_ok"
                    android:drawablePadding="@dimen/dipX5"
                    android:layout_marginLeft="@dimen/dipX10"

                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <com.naneng.jiche.ui.pruduct.JumpView
                android:id="@+id/productIntroduce"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_button_height"
                app:left_text="查看商品详细说明" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <com.naneng.jiche.ui.pruduct.JumpView
                android:id="@+id/userCommont"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_button_height"
                app:left_text="@string/user_commont" />


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="@dimen/common_button_height">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:textColor="@color/red_clolor"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/addCar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/common_red"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:text="加入购物车"
                android:gravity="center" />

            <TextView
                android:id="@+id/buy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/blue_color"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:gravity="center"
                android:visibility="gone"
                android:text="立刻购买" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>


