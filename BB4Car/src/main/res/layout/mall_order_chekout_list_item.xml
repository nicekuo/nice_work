<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dipX15"
    android:background="@color/white">
    <com.core.widget.image.SFImageView
        android:id="@+id/id_item_img_product"
        android:layout_width="@dimen/item_img_size"
        android:layout_height="@dimen/item_img_size" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dipX15"
        android:gravity="right"
        >
        <TextView
            android:id="@+id/id_item_tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_order_good_name"
            android:paddingLeft="@dimen/dipX5"
            android:textSize="@dimen/txt_size_item_middle"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dipX5">
            <TextView
                android:id="@+id/id_item_tv_per_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥88"
                android:textSize="@dimen/txt_size_item_middle"
                android:textColor="@color/common_red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×"
                android:textSize="@dimen/txt_size_item_middle"
                android:textColor="@color/red"
                android:layout_toLeftOf="@+id/id_item_tv_good_amount"
                />
            <TextView
                android:id="@+id/id_item_tv_good_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="@dimen/txt_size_item_middle"
                android:textColor="@color/red"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dipX5"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/id_item_tv_good_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_item_middle"
            android:text="￥88"
            android:textColor="@color/red"
            android:layout_marginRight="15dip"/>

    </LinearLayout>

</LinearLayout>