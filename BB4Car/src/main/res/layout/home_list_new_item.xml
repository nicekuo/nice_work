<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/item_img_size" >
    <com.core.widget.image.SFImageView
        android:id="@+id/id_img_item"
        android:layout_width="@dimen/item_img_size"
        android:layout_height="@dimen/item_img_size"
        android:layout_margin="3dip"
        android:background="@drawable/icon_air_water"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dip" android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="2dip">
        <TextView
            android:id="@+id/id_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_new_title"
            android:textSize="@dimen/txt_size_item_title"/>
        <TextView
            android:id="@+id/id_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_new_content"
            android:textSize="@dimen/txt_size_item_content"
            android:textColor="@color/text_666666"
            android:layout_marginTop="5dip"/>
    </LinearLayout>
</LinearLayout>