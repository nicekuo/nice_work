<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dipX15">

    <com.core.widget.image.SFImageView
        android:id="@+id/id_img_product"
        android:layout_width="@dimen/item_img_size"
        android:layout_height="@dimen/item_img_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dipX10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_tv_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dipX5"
                android:textColor="@color/text_666666"
                android:text="飞电风扇发送到发送到发送到发送到发送到发送到方法撒打算放水电费是"
                android:maxLines="2"
                android:lineSpacingMultiplier="1.2"
                android:ellipsize="end"
                android:textSize="@dimen/txt_size_item_middle" />


            <TextView
                android:id="@+id/id_tv_per_price"
                android:layout_width="wrap_content"
                android:paddingLeft="7dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="￥88"
                android:textColor="@color/red"
                android:textSize="@dimen/txt_size_item_middle" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dipX5"
            >


            <TextView
                android:id="@+id/id_btn_do_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dipX10"
                android:background="@color/app_color"
                android:text="@string/hint_order_tip_do_comment"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_item_content" />


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <TextView
                android:id="@+id/id_tv_good_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_tv_per_price"
                android:gravity="center"
                android:text="￥88"
                android:textColor="@color/common_red"
                android:textSize="@dimen/txt_size_item_title" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>