<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:paddingTop="@dimen/dipX10"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dipX25">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dipX40"
            >

            <com.core.widget.image.SFImageView
                android:id="@+id/avatarView"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                />

            <View
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/circlr_up_blue" />

        </FrameLayout>

        <TextView
            android:id="@+id/up_nick_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dipX10"
            android:layout_weight="1"
            android:text="nice"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_item_title" />

        <TextView
            android:id="@+id/rank_view"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_member"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:singleLine="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dipX10"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dipX15"
        android:paddingRight="@dimen/dipX15">

        <LinearLayout
            android:id="@+id/real_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/common_button_height"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="用户姓名"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/txt_size_item_middle" />

            <TextView
                android:id="@+id/real_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_button_height"
                android:drawablePadding="@dimen/dipX5"
                android:drawableRight="@drawable/icon_errow_right"
                android:gravity="center_vertical"
                android:text="王石"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/txt_size_item_middle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/nick_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/common_button_height"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="昵称"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/txt_size_item_middle" />

            <TextView
                android:id="@+id/nick_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_button_height"
                android:drawablePadding="@dimen/dipX5"
                android:drawableRight="@drawable/icon_errow_right"
                android:gravity="center_vertical"
                android:text="nice"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/txt_size_item_middle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/gender_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/common_button_height"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="性别"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/txt_size_item_middle" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_button_height"
                android:drawablePadding="@dimen/dipX5"
                android:drawableRight="@drawable/icon_errow_right"
                android:gravity="center_vertical"
                android:text="男"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/txt_size_item_middle" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/born_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/common_button_height"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="出生日期"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/txt_size_item_middle" />

            <TextView
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_button_height"
                android:drawablePadding="@dimen/dipX5"
                android:drawableRight="@drawable/icon_errow_right"
                android:gravity="center_vertical"
                android:text="2016年05月13日"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/txt_size_item_middle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/common_button_height"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/txt_size_item_middle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_button_height"
                android:drawablePadding="@dimen/dipX5"
                android:drawableRight="@drawable/icon_errow_right"
                android:gravity="center_vertical"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/txt_size_item_middle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

    </LinearLayout>


    <TextView
        android:id="@+id/quit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_button_height"
        android:background="@color/blue"
        android:gravity="center"
        android:text="退出当前账户"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_item_middle" />
</LinearLayout>