<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.core.widget.image.SFImageView
        android:id="@+id/id_ct_goods_img_item"
        android:layout_width="@dimen/shop_item_image_height"
        android:layout_height="@dimen/shop_item_image_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp" />
    <!---右侧数据-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="2dip">

            <TextView
                android:id="@+id/id_ct_goods_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_new_title"
                android:textSize="@dimen/txt_size_item_title" />

            <TextView
                android:id="@+id/id_ct_goods_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="@string/hint_new_content"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/txt_size_item_content" />

            <TextView
                android:id="@+id/id_ct_goods_tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="@string/hint_phone"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/txt_size_item_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/id_ct_goods_rt"
                    style="@style/style_roomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/rating_bar_size" />

                <TextView
                    android:id="@+id/id_ct_goods_tv_commnet_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:text="@string/hint_comment_count"
                    android:textColor="@color/text_666666"
                    android:textSize="@dimen/txt_size_item_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/id_ct_goods_tv_sales_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/hint_comment_count"
                android:textColor="@color/text_666666"
                android:textSize="@dimen/txt_size_item_content" />
        </LinearLayout>



    </RelativeLayout>


</LinearLayout>